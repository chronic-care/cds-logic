{
  "resourceType": "PlanDefinition",
  "id": "htn-management",
  "url": "http://github.com/chronic-care/fhir/PlanDefinition/htn-management",
  "status": "draft",
  "library": [
    "Library/library-htn-management"
  ],
  "title": "Hypertension care management",
  "description": "Recommendations for diagnosing and treating hypertension.",
  "type" : {
    "coding" : [
      {
        "system" : "http://terminology.hl7.org/CodeSystem/plan-definition-type",
        "code" : "eca-rule",
        "display" : "ECA Rule"
      }
    ]
  },
  "action": [
    {
      "title": "Uncontrolled High Blood Pressure",
      "documentation": [
        {
          "type": "documentation",
          "display": "Intermountain guideline for Management of High Blood Pressure",
          "url": "https://intermountainhealthcare.org/ckr-ext/Dcmnt?ncid=51061853"
        }
      ],
      "trigger": [
        {
          "type": "named-event",
          "name": "patient-view"
        }
      ],
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/cql",
            "expression": "Has Uncontrolled Hypertension"
          }
        }
      ],
      "dynamicValue": [
        {
          "path": "action.title",
          "expression": {
            "language": "text/cql",
            "expression": "UncontrolledHypertensionTitle"
          }
        },
        {
          "path": "action.description",
          "expression": {
            "language": "text/cql",
            "expression": "UncontrolledHypertensionDetail"
          }
        },
        {
          "path": "action.extension",
          "expression": {
            "language": "text/cql",
            "expression": "UncontrolledHypertensionSeverity"
          }
        }
      ]
    },
    {
      "title": "Recommend Antihypertensive Medication",
      "description": "Recommend ordering Antihypertensive medication for this patient.",
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/cql",
            "expression": "Recommend Antihypertensive Medication"
          }
        }
      ],
      "type": {
        "coding": [
          {
            "system": "http://terminology.hl7.org/CodeSystem/action-type",
            "code": "create"
          }
        ]
      },
      "definitionCanonical": "ActivityDefinition/activitydefinition-htn-medication",
      "dynamicValue": [
        {
          "path": "action.title",
          "expression": {
            "language": "text/cql",
            "expression": "RecommendAntihypertensiveTitle"
          }
        },
        {
          "path": "action.description",
          "expression": {
            "language": "text/cql",
            "expression": "RecommendAntihypertensiveDetail"
          }
        },
        {
          "path": "action.extension",
          "expression": {
            "language": "text/cql",
            "expression": "RecommendAntihypertensiveSeverity"
          }
        }
      ]
    },
    {
      "title": "Suspected Hypertension",
      "description": "This patient may have undiagnosed hypertension",
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/cql",
            "expression": "Has Suspected Hypertension"
          }
        }
      ],
      "dynamicValue": [
        {
          "path": "action.title",
          "expression": {
            "language": "text/cql",
            "expression": "SuspectedHypertensionTitle"
          }
        },
        {
          "path": "action.description",
          "expression": {
            "language": "text/cql",
            "expression": "SuspectedHypertensionDetail"
          }
        },
        {
          "path": "action.extension",
          "expression": {
            "language": "text/cql",
            "expression": "SuspectedHypertensionSeverity"
          }
        }
      ]
    }
  ]
}
