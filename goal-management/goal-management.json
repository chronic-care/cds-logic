{
  "resourceType": "PlanDefinition",
  "id": "goal-management",
  "url": "http://github.com/chronic-care/fhir/PlanDefinition/goal-management",
  "status": "draft",
  "library": [
    "Library/library-goal-management"
  ],
  "title": "Patient-centered goal management",
  "description": "Goal evaluation for care self-management by patients.",
  "type" : {
    "coding" : [
      {
        "system" : "http://terminology.hl7.org/CodeSystem/plan-definition-type",
        "code" : "eca-rule",
        "display" : "ECA Rule"
      }
    ]
  },
  "action": [
    {
      "title": "Weight Management",
      "description": "Weight management goals.",
      "documentation": [
        {
          "type": "documentation",
          "display": "U.S. Preventive Services Task Force obesity screening",
          "url": "https://guidelines.gov/summaries/summary/37710/screening-for-and-management-of-obesity-in-adults-us-preventive-services-task-force-recommendation-statement"
        }
      ],
      "trigger": [
        {
          "type": "named-event",
          "name": "patient-view"
        }
      ],
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/cql",
            "expression": "Is Overweight or Obese"
          }
        }
      ],
      "dynamicValue": [
        {
          "path": "action.title",
          "expression": {
            "language": "text/cql",
            "expression": "OverweightTitle"
          }
        },
        {
          "path": "action.description",
          "expression": {
            "language": "text/cql",
            "expression": "OverweightDetail"
          }
        },
        {
          "path": "action.extension",
          "expression": {
            "language": "text/cql",
            "expression": "OverweightSeverity"
          }
        }
      ]
    },
    {
      "title": "Missing Weight or Height",
      "description": "Please enter your body weight and height.",
      "condition": [
        {
          "kind": "applicability",
          "expression": {
            "language": "text/cql",
            "expression": "Needs Body Weight or Height"
          }
        }
      ],
      "dynamicValue": [
        {
          "path": "action.title",
          "expression": {
            "language": "text/cql",
            "expression": "NeedsWeightHeightTitle"
          }
        },
        {
          "path": "action.description",
          "expression": {
            "language": "text/cql",
            "expression": "NeedsWeightHeightDetail"
          }
        },
        {
          "path": "action.extension",
          "expression": {
            "language": "text/cql",
            "expression": "NeedsWeightHeightSeverity"
          }
        }
      ]
    }
  ]
}
